<!-- Offcanvas Menu Begin -->
<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
    <div class="offcanvas__cart">
        <% if (usertype === "customer") { %>
            <div class="header__top__right__cart">
                <a href="/shopping-cart"><img src="/img/icon/cart.png" alt="" width="30px" height="30px" > </a>
                <div class="cart__price">Cart: <span>$<%= session %></span></div>
            </div>
        <% } %>
    </div>
    <div class="offcanvas__logo">
        <a href="/"><img src="/img/logo.png" alt=""></a>
    </div>
    <div id="mobile-menu-wrap"></div>
    <div class="offcanvas__option">
        <ul>
            <% if (username) { %>
                <li>Hello <%= username%></li>
                <li><a href="/users/logout">Logout</a> </li>
            <% } else { %>
                <li><a href="/users/login">Login</a> </li>
                <li><a href="/users/signup">Sign Up</a> </li>
            <% } %>
        </ul>
    </div>
</div>
<!-- Offcanvas Menu End -->

<!-- Header Section Begin -->
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="header__top__inner">
                        <div class="header__top__left">
                            <ul>
                                <% if (username) { %>
                                    <li>Hello <%= username%></li>
                                    <li><a href="/users/logout">Logout</a> </li>
                                <% } else { %>
                                    <li><a href="/users/login">Login</a> </li>
                                    <li><a href="/users/signup">Sign Up</a> </li>
                                <% } %>
                            </ul>
                        </div>
                        <div class="header__logo">
                            <a href="/"><img src="/img/logo.png" alt=""></a>
                        </div>
                        <div class="header__top__right">

                            <% if (usertype === "customer") { %>
                            <div class="header__top__right__cart">
                                <a href="/shopping-cart"><img src="/img/icon/cart.png" width="30px" height="30px"  alt=""> </a>
                                <div class="cart__price"> <span> Qty: <%= session.cart ? session.cart.totalQty : 0 %>  </span> | <span>$<%= session.cart ? session.cart.totalPrice : 0 %></span></div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/shop">Shop</a></li>
                        <li><a href="/contact-us">Contact</a></li>

                        <% if (usertype === "admin") { %>
                            <li><a href="/shop/new">Create New</a></li>
                        <% } %>

                        <% if (usertype === "customer") { %>
                         <li> <a href="#">My Orders</a></li> 
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- Header Section End -->