<!DOCTYPE html>
<html lang="zxx">

<head>
    <%- include("partials/css.ejs") %>
    <title>Fantastic Cakeshop!</title>

</head>

<body>
    <%- include("partials/header.ejs") %>

        <!-- Breadcrumb Begin -->
        <div class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="breadcrumb__text">
                            <h2>Checkout</h2>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="breadcrumb__links">
                            <a href="/shopping-cart">Back to shopping cart</a>
                            <span>Checkout</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcrumb End -->
    
        <!-- Checkout Section Begin -->
        <section class="checkout spad">
            <div class="container">
                <div class="checkout__form">
                    <form action="/checkout/order-success" method="POST">
                        <div class="row">
                            <div class="col-lg-8 col-md-6">
                                <h6 class="checkout__title">Billing and Delivery Details</h6>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>First Name<span>*</span></p>
                                            <input type="text" required name="firstName">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Last Name<span>*</span></p>
                                            <input type="text" required name="lastName">
                                        </div>
                                    </div>
                                </div>
                                <div class="checkout__input">
                                    <p>Address<span>*</span></p>
                                    <input type="text" placeholder="Street Address 1" class="checkout__input__add" required name="address">
                                    
                                </div>

                                <div class="checkout__input">
                                    <p>Postal Code<span>*</span></p>
                                    <input type="text" required name="postalCode">
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Phone<span>*</span></p>
                                            <input type="number" required name="phone">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Email<span>*</span></p>
                                            <input type="text" required name="email">
                                        </div>
                                    </div>
                                </div>
                                <div class="checkout__input">
                                    <p>Credit Card Number<span>*</span></p>
                                    <input type="text" required>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="checkout__input">
                                            <p>Expiry Month<span>*</span></p>
                                            <input type="number" min="01" max="12" value="" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="checkout__input">
                                            <p>Expiry Year<span>*</span></p>
                                            <input type="number" min="2021" max="2028" value="" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>CVV<span>*</span></p>
                                            <input type="text" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="checkout__input__checkbox">

                                </div>

 
                                <div class="checkout__input">
                                    <p>Order notes</p>
                                    <input type="text"
                                    placeholder="Notes about your order, e.g. special notes for delivery." name="notes">
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="checkout__order">
                                    <h6 class="order__title">Your order</h6>

                                    <table>
                                            <th>Product</th>
                                            <th>Qty</th>
                                            <th>Price</th>

                                            <% let counter = 1 %>
                                            <% for (const value of Object.values(session.cart.items)) { %>
                                            <tr>
                                                <td style="width:350px">
                                                    <%= counter %>. <%= value.item.name %> 
                                                </td>
                                                <td style="width:50px">
                                                    <%= value.qty %> 
                                                </td>
                                                <td>
                                                    $ <%= value.price %>
                                                </td>
                                            </tr>
                                            <% counter++ %>
                                            <% } %>
                                    </table>

                                    <ul class="checkout__total__all">
                                        <li>Total <span>$<%= session.cart.totalPrice%></span></li>
                                    </ul>

                                    <p>Please note that order placed is non-refundable.</p>

                                    <button type="submit" class="site-btn">PLACE ORDER</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <!-- Checkout Section End -->
    
        

    <%- include("partials/footer.ejs") %>

</body>

</html>